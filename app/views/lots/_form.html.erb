<%= form_with(model: [@project, lot]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :project_id %>
    <%= form.text_field :project_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :permit %>
    <%= form.text_field :permit, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phase %>
    <%= form.text_field :phase, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :lot %>
    <%= form.text_field :lot, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :plan_type_id %>
    <%= form.text_field :plan_type_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
