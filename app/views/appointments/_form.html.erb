<%= form_with(model: appointment) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :alteration %>
    <%= form.text_field :alteration_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_created_id %>
    <%= form.text_field :user_created_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_name %>
    <%= form.text_field :contact_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_phone %>
    <%= form.text_field :contact_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.text_field :start_time, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.text_field :end_time, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
