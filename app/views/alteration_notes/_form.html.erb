<%= form_with(model: [@alteration, alteration_note]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.rich_text_area :text, class: "form-control", data: { controller: "mentions", target: "mentions.field" } %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :user_id, class: "form-control", value: current_user.id %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :alteration_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', alteration_alteration_note_path(@alteration, @alteration_note), class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
