<%= form_with(model: project) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :zipcode %>
    <%= form.text_field :zipcode, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :climate_zone %>
    <%= form.text_field :climate_zone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :jurisdiction %>
    <%= form.text_field :jurisdiction, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :project_type %>
    <%= form.text_field :project_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :utility_electricity %>
    <%= form.text_field :utility_electricity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :utility_gas %>
    <%= form.text_field :utility_gas, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :active %>
    <%= form.check_box :active, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :file_share %>
    <%= form.text_field :file_share, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
