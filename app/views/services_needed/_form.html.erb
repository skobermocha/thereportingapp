<%= form_with(model: [@system, service_needed]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :system %>
    <%= form.text_field :system_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :service %>
    <%= form.text_field :service_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', system_service_needed_path(@system, @service_needed), class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
